---
import BoxGradientBorder from '../../components/BoxGradientBorder.astro';
import FAQQuestions from './FAQQuestions.astro';
---

<div class="faq-container">
  <div class="faq-whatsapp">
    <h3 class="faq-title--desktop">Perguntas e respostas mais frequentes</h3>

    <BoxGradientBorder
      borderColor="gray"
      padding="32px"
      borderWidth="1px"
      backgroundColor="#121214"
    >
      <div class="faq-whatsapp-icon" style="margin-bottom: 24px">
        <img src="/assets/icons/whatsapp.svg" alt="Whatsapp" />
      </div>
      <h4>Ficou alguma dúvida?</h4>
      <p class="body-16">Nos envie uma mensagem</p>

      <button class="faq-whatsapp-button interactable" type="button">
        Chamar no Whatsapp
      </button>
    </BoxGradientBorder>
  </div>
  <FAQQuestions
    questions={[
      {
        title: 'Quanto tempo vou ter acesso ao treinamento?',
        paragraphs: [
