<style lang="scss">
  main {
    position: relative;
    width: 100%;
  }

  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 128px;
  }

  .background-blob {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    width: calc(468.92px * 1.5);
    height: calc(468.92px * 1.5);
    top: 100px;
    left: -177.19px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--blue-dark) 0%, transparent 70%);
    z-index: 1;
    opacity: 0.7;

    &-2 {
      background: radial-gradient(
        circle,
        var(--blue-light) 0%,
        transparent 70%
      );
      top: -100px;
      left: calc(45% + 177.19px);
    }
  }
</style>
