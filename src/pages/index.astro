    <Button variant="primary-alt">Inscreva-se agora</Button>
    <Button variant="outline">Inscreva-se agora</Button>
    <AnimatedCodeBlock code={'Code block here_'} language="javascript" />
    <FixedCTA />
    <img src="/public/assets/logo.svg" alt="logo" /> -->
</Layout>

<style lang="scss">
  main {
    position: relative;
    width: 100%;
    padding-bottom: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .box {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .limited-width {
    width: 100%;
    max-width: 1102px;
  }

  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 128px;
  }

  .about-ts {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    margin-top: 165px;

    &-text {
      max-width: 400px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
      margin-right: 60px;

      h3,
      p {
        width: 100%;
        text-align: left;
      }

      &-image {
        width: 100px;
        height: 100px;

        img {
          position: absolute;
          top: 0;
          left: 0;
          transform: translate(-70px, -65px);
        }
      }
    }

    &-codeblock {
      position: relative;

      .absolute-codeblock {
        position: absolute;
        width: auto;

        &.top-left {
          top: 20px;
          left: -70px;
        }

        &.bottom-right {
          bottom: 20px;
          right: -70px;
        }
      }
    }
  }

  .numbers {
    display: flex;
    flex-wrap: wrap;
    gap: 66px;
    padding-left: 144px;
    &-item {
      position: relative;
      width: 328px;

      h1,
      h4,
      p {
        margin: 0;
        text-align: left;
      }

      h4 {
        margin-top: 32px;
        margin-bottom: 16px;
      }

      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: -24px;
        width: 2px;
        height: 100%;
        background: linear-gradient(
          to top,
          var(--blue-dark),
          var(--blue-light)
        );
      }
    }
  }

  #target-audience {
    margin-top: 175px;
    margin-bottom: 90px;

    .plans {
      display: flex;
      gap: 32px;
      margin-top: 84px;
      .plan {
        width: 291px;
        height: 401px;
        padding: 48px 32px;
        border-radius: 8px;
        background: var(--gray-800);
      }
    }
  }

  #cta-alt {
    background: linear-gradient(105.87deg, #01c4fb 0.1%, #0165fc 77.77%);
    box-shadow: 0px 4px 70.9px 0px #0266fc80;
    border-radius: 8px;
    padding: 48px;
    display: flex;
    justify-content: space-between;
    align-items: center;

    h3 {
      margin: 0;
    }

    .cta-alt-buttons {
      display: flex;
      align-items: center;
      gap: 16px;
    }
  }

  .background-blob {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    // overflow: hidden;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    width: calc(468.92px * 1.5);
    height: calc(468.92px * 1.5);
    top: 100px;
    left: -177.19px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--blue-dark) 0%, transparent 70%);
    z-index: 1;
    opacity: 0.7;

    &-2 {
      background: radial-gradient(
        circle,
        var(--blue-light) 0%,
        transparent 70%
      );
      top: -100px;
      left: calc(45% + 177.19px);
    }
  }
</style>
