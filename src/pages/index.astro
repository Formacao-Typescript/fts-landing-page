---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import AnimatedCodeBlock from '../components/AnimatedCodeBlock.astro';
import FixedCTA from '../components/FixedCTA.astro';
import Header from './home/Header.astro';
---

<Layout title="Formação Typescript">
  <main>
    <Header />
    <div class="background-blob">
      <span class="blob"></span>
      <span class="blob blob-2"></span>
    </div>
    <section id="hero">
      <AnimatedCodeBlock code="Hello World_" />
      <h1>
        Torne-se um mestre <br /> em <strong class="text-gradient"
          >TypeScript</strong
        >
      </h1>
      <p class="body-24">
        Domine a <strong>tecnologia mais requisitada</strong> e conquiste as melhores
        vagas do mercado.
      </p>
    </section>
