---
interface Props {
  code: string;
}

const { code } = Astro.props;
---

<div class="animated-code-block">
  <code>{code}_</code>
</div>

<style>
  .animated-code-block {
    /* width: 203px; */
    height: 35px;
    padding: 12px 24px;
    border-radius: 4px;
    background: #000;
    border: 0.5px solid;
    border-image-source: linear-gradient(180deg, #2d2d2d 0%, #121214 100%);

    display: flex;
    align-items: center;
    justify-content: center;
  }

  code {
    font-family: 'Red Hat Mono', sans-serif;
    font-size: 16px;
    font-weight: 300;
    line-height: 50px;
    text-align: center;
    color: var(--gray-500);
  }
</style>
