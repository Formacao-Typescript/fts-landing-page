---
interface Props {
  src: string;
  poster?: string;
  autoplay?: boolean;
  controls?: boolean;
  muted?: boolean;
  loop?: boolean;
}

const {
  src,
  poster,
  autoplay = false,
  controls = true,
  muted = false,
  loop = false,
} = Astro.props;
---

<div class="video-player">
  <video
    id="video"
    src={src}
    poster={poster}
    autoplay={autoplay}
    controls={controls}
    muted={muted}
    loop={loop}
  >
    Your browser does not support the video tag.
  </video>
  <div class="play-overlay">
    <button type="button" class="play-button">
      <span class="outer-circle circle">
        <span class="inner-circle circle">
          <img src="/public/assets/video-play.svg" alt="Play" />
        </span>
      </span>
    </button>
  </div>
</div>

<style lang="scss">
  .video-player {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    position: relative;

    video {
      width: 100%;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .play-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: rgba(0, 0, 0, 0.3);
      // background: red;
      opacity: 1;
      transition:
        opacity 0.2s ease-in-out,
        transform 0.2s ease-in-out;

      &:hover {
        opacity: 0.8;
        transform: scale(1.1);
      }
    }

    .play-button {
      width: auto;
      height: auto;

      background: none;
      border: none;
      cursor: pointer;
      color: white;
      padding: 0;
      transition: transform 0.3s ease;

      svg {
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
      }

      .circle {
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
      }

      .outer-circle {
        width: 116.27px;
        height: 116.27px;

        box-shadow:
          0 0 0 2px rgba(1, 101, 252, 0.1),
          0 0 10px 5px rgba(1, 101, 252, 0.05);
      }

      .inner-circle {
        width: 76.86px;
        height: 76.86px;
        background: var(--blue-gradient);
        img {
          width: 39.09px;
          height: 39.09px;
          transform: translateX(5px);
        }
      }
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('video') as HTMLVideoElement;
    const playButton = document.querySelector(
      '.play-button'
    ) as HTMLButtonElement;
    const playOverlay = document.querySelector('.play-overlay') as HTMLElement;

    if (video && playButton && playOverlay) {
      playButton.addEventListener('click', () => {
        if (video.paused) {
          video.play();
          playOverlay.style.display = 'none';
        } else {
          video.pause();
          playOverlay.style.display = 'flex';
        }
      });

      video.addEventListener('play', () => {
        playOverlay.style.display = 'none';
      });

      video.addEventListener('pause', () => {
        playOverlay.style.display = 'flex';
      });
    }
  });
</script>
